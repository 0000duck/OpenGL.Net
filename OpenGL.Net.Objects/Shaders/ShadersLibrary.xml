<?xml version="1.0" encoding="utf-8" ?>
<ShadersLibrary>
	
	<!-- Include sources -->
	<Includes>
		<Include Id="/OpenGL/Compatibility.glsl">
			<Path>OpenGL.Objects.Shaders.Compatibility.glsl</Path>
		</Include>
		<Include Id="/OpenGL/TransformState.glsl">
			<Path>OpenGL.Objects.Shaders.TransformState.glsl</Path>
		</Include>
	</Includes>
	
	<!-- Program Objects -->
	<Objects>
		
		<!-- Standard -->
		
		<Object Path="OpenGL.Objects.Shaders.Standard.Vertex.glsl">
			<Symbols>
				<Symbol>GLO_COLOR_PER_VERTEX</Symbol>
				<Symbol>GLO_LIGHTING_PER_VERTEX</Symbol>
				<Symbol>GLO_LIGHTING_PER_FRAGMENT</Symbol>
			</Symbols>
		</Object>

		<Object Path="OpenGL.Objects.Shaders.Standard.Fragment.glsl">
			<Symbols>
				<Symbol>GLO_COLOR_PER_VERTEX</Symbol>
				<Symbol>GLO_LIGHTING_PER_VERTEX</Symbol>
				<Symbol>GLO_LIGHTING_PER_FRAGMENT</Symbol>
				<Symbol>GLO_REFLECTION_PER_FRAGMENT</Symbol>
				<Symbol>GLO_REFRACTION_PER_FRAGMENT</Symbol>
			</Symbols>
		</Object>

		<!-- Line -->

		<Object Path="OpenGL.Objects.Shaders.Line.Vertex.glsl" />
		<Object Path="OpenGL.Objects.Shaders.Line.Geometry.glsl" />
		<Object Path="OpenGL.Objects.Shaders.Line.Fragment.glsl">
			<Symbols>
				<Symbol>GLO_COLOR_PER_VERTEX</Symbol>
			</Symbols>
		</Object>
		
		<!-- CubeMapping -->

		<Object Path="OpenGL.Objects.Shaders.CubeMapping.Vertex.glsl" />
		<Object Path="OpenGL.Objects.Shaders.CubeMapping.Fragment.glsl" />
		
		<!-- Geometry Clipmap -->
		<Object Path="OpenGL.Objects.Shaders.GeometryClipmap.Vertex.glsl" />
		<Object Path="OpenGL.Objects.Shaders.GeometryClipmap.Fragment.glsl" />
		<Object Path="OpenGL.Objects.Shaders.GeometryClipmap.ClipmapTexFragment.glsl" />
	
	</Objects>

	<Programs>

		<!-- Standard -->
		<Program Id="OpenGL.Standard">
			<Object Path="OpenGL.Objects.Shaders.Standard.Vertex.glsl" Stage="Vertex" />
			<Object Path="OpenGL.Objects.Shaders.Standard.Fragment.glsl" Stage="Fragment" />
			<Attribute Name="glo_Position" Semantic="Position" />

			<Uniform Name="glo_ModelViewProjection" Semantic="ModelViewProjection" />
			<Uniform Name="glo_UniformColor" Semantic="Color"/>
		</Program>

		<!-- Standard+Color -->
		<Program Id="OpenGL.Standard+Color">
			<Object Path="OpenGL.Objects.Shaders.Standard.Vertex.glsl" Stage="Vertex" />
			<Object Path="OpenGL.Objects.Shaders.Standard.Fragment.glsl" Stage="Fragment">
				<Symbols>
					<Symbol>GLO_COLOR_PER_VERTEX</Symbol>
				</Symbols>
			</Object>
			<Attribute Name="glo_Position" Semantic="Position" />
			<Attribute Name="glo_Color" Semantic="Color" />
			
			<Uniform Name="glo_ModelViewProjection" Semantic="ModelViewProjection" />
		</Program>
		
		<!-- Line -->
		<Program Id="OpenGL.Line">
			<Object Path="OpenGL.Objects.Shaders.Line.Vertex.glsl" Stage="Vertex" />
			<Object Path="OpenGL.Objects.Shaders.Line.Geometry.glsl" Stage="Geometry" />
			<Object Path="OpenGL.Objects.Shaders.Line.Fragment.glsl" Stage="Fragment" />
			<Attribute Name="glo_Position" Semantic="Position" />
		</Program>

		<!-- Line+Color -->
		<Program Id="OpenGL.Line+Color">
			<Object Path="OpenGL.Objects.Shaders.Line.Vertex.glsl" Stage="Vertex" />
			<Object Path="OpenGL.Objects.Shaders.Line.Geometry.glsl" Stage="Geometry" />
			<Object Path="OpenGL.Objects.Shaders.Line.Fragment.glsl" Stage="Fragment" >
				<Symbols>
					<Symbol>GLO_COLOR_PER_VERTEX</Symbol>
				</Symbols>
			</Object>
			<Attribute Name="glo_Position" Semantic="Position" />
			<Attribute Name="glo_Color" Semantic="Color" />
		</Program>

		<!-- CubeMapping -->
		<Program Id="OpenGL.CubeMapping">
			<Object Path="OpenGL.Objects.Shaders.CubeMapping.Vertex.glsl" Stage="Vertex" />
			<Object Path="OpenGL.Objects.Shaders.CubeMapping.Fragment.glsl" Stage="Fragment" />
			<Attribute Name="glo_Position" Semantic="Position" />

			<Uniform Name="glo_ModelViewProjection" Semantic="ModelViewProjection" />
		</Program>
	
	</Programs>
	
</ShadersLibrary>
